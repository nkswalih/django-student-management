{
  "builds": [
    {
      "src": "student_management/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "student_management/wsgi.py" }
  ],
  "buildCommand": "python manage.py collectstatic --noinput"
}